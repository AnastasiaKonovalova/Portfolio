-var img2 = require('./img/chat_new.JPG')
-var img3 = require('./img/georeview.JPG')
-var img4 = require('./img/burgers.JPG')
-var img5 = require('./img/friends_filter.JPG')

-var works = [{id: 1, title: 'Клиент приложения для заказа такси', stack: 'Redux, redux-saga, Redux Form, CSS-modules, Jest', url: 'https://github.com/AnastasiaKonovalova/Loft-taxi', img: "./img/loft_taxi.JPG"}, {id: 2, title: 'Чат', stack: 'JavaScript, Node.js, Handlebars, SCSS, HTML5 File API, HTML5 dnd API, WebSoсket', url: 'https://github.com/AnastasiaKonovalova/Chat', img: "./img/chat_new.JPG"}, {id: 3, title: 'Приложение для создания отзывов на карте', stack: 'JavaScript ,Handlebars, SCSS, HTML5 dnd API', url: 'https://github.com/AnastasiaKonovalova/Geo-reviews', img: "./img/georeview.JPG"}, {id: 4, title: 'Лендинг для бургер-бара', stack: 'JavaScript, HTML, SCSS', url: 'https://github.com/AnastasiaKonovalova/burgers', img: "./img/burgers.JPG"}, {id: 5, title: 'Приложение для работы с VK api', stack: 'JavaScript, Handlebars, SCSS, VK API, HTML5 dnd API', url: 'https://github.com/AnastasiaKonovalova/Friends-filter', img: "./img/friends_filter.JPG"}]

.slider__section
    if works.length
        .works__description
            .central
                .works__title.subtitle= works[0].title
                .works__techs= works[0].stack
                .works__button
                    a(href=works[0].url).works__link.link
                        svg.link__vector
                            use(xlink:href="#link")
                        span.link__text Посмотреть сайт

        .works__main-img

            each work, index in works
                if index === 0
                    div(class = "works__img works__img--active")
                        img.works__pic(src=work.img)
                else
                    div(class = "works__img")
                        img.works__pic(src=work.img)

        .works__slider
            .slider
                .slider__column.slider__column--left
                    .slider__viewport
                        each work, index in works 
                            if index === works.length - 1
                                .slider__img.slider__img--left.slider__img--active
                                    img.slider__pic(src=work.img)
                            else 
                                .slider__img.slider__img--left.slider__img--up
                                    img.slider__pic(src=work.img)

                    .slider__shadow
                    button#slideDown.slider__arrow.slider__arrow--down
                        svg.slider__vector
                            use(xlink:href="#arrow_down_2")
                .slider__column.slider__column--right
                    .slider__viewport
                        each work, index in works 
                            if index === 1
                                .slider__img.slider__img--right.slider__img--active
                                    img.slider__pic(src=work.img + '')
                            else 
                                .slider__img.slider__img--right.slider__img--down
                                    img.slider__pic(src=work.img + '')

                    .slider__shadow
                    button#slideUp.slider__arrow.slider__arrow--up
                        svg.slider__vector
                            use(xlink:href="#arrow_up")
    else 
        .works__fallback.subtitle Работ пока нет
