block title
    - var worksArray = JSON.stringify([{id: 1, title: 'Клиент приложения для заказа такси', stack: 'Redux, redux-saga, Redux Form, CSS-modules, Jest', url: 'https://github.com/AnastasiaKonovalova/Loft-taxi', img: "./img/loft_taxi.JPG"}, {id: 2, title: 'Чат', stack: 'JavaScript, Node.js, Handlebars, SCSS, HTML5 File API, HTML5 dnd API, WebSoсket', url: 'https://github.com/AnastasiaKonovalova/Chat', img: "./img/chat_new.JPG"}, {id: 3, title: 'Приложение для создания отзывов на карте', stack: 'JavaScript ,Handlebars, SCSS, HTML5 dnd API', url: 'https://github.com/AnastasiaKonovalova/Geo-reviews', img: "./img/georeview.JPG"}, {id: 4, title: 'Лендинг для бургер-бара', stack: 'JavaScript, HTML, SCSS', url: 'https://github.com/AnastasiaKonovalova/burgers', img: "./img/burgers.JPG"}, {id: 5, title: 'Приложение для работы с VK api', stack: 'JavaScript, Handlebars, SCSS, VK API, HTML5 dnd API', url: 'https://github.com/AnastasiaKonovalova/Friends-filter', img: "./img/friends_filter.JPG"}])
    title Works
    script#myWorks 
        != `window.WORKS = ${worksArray}`

block content
    include ../../icons/features.svg

    include ../../components/enter_screen/enter_screen.pug
    +enter_screen('Мои работы', 'works')
    
    section.works
        include ../../icons/header_triangles.svg
        include ../../components/slider/slider.pug
            
    .works__background.has_bg_image
        section.comments
            h2.comments__title.title Что обо мне говорят
            ul.comments__list
                li.comments__item.comment
                    .comment__info
                        .comment__img
                            img.comment__pic(src=require('../../img/dima.png'))
                        .comment__text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi eget nulla faucibus diam laoreet faucibus sed quis mauris. Phasellus et cursus odio. 
                            .comment__icon
                                svg.comment__vector
                                    use(xlink:href="#quotes")

                    .comment__person
                        .comment__author Mauris Nullam
                        .comment__post — nunc rutrum
                li.comments__item.comment
                    .comment__info
                        .comment__img
                            img.comment__pic(src=require('../../img/vova.png'))
                        .comment__text Aliquam vitae laoreet nisi. Mauris elit ipsum, fermentum vel consectetur eget, congue quis enim. Aliquam pretium sit amet erat a eleifend. Aenean semper mattis lacus, vel gravida lacus iaculis a.
                            .comment__icon
                                svg.comment__vector
                                    use(xlink:href="#quotes")

                    .comment__person
                        .comment__author Donec Maecenas
                        .comment__post — condimentum

        section.feedback
            
            .feedback__form
                .blurred
                    .blur
                    form.form(method="POST" action='/works' enctype='application/x-www-form-urlencoded')
                        h2.form__title.subtitle Связаться со мной
                        .form__inputs
                            input#inputName.form__input.form__input--name(placeholder="Имя" name='name')
                            input#inputMail.form__input.form__input--mail(placeholder="Email" name='mail')
                            textarea#inputMessage.form__input.form__input--message(placeholder="Ваше сообщение" name='message')
                        .form__buttons
                            button#formSubmit(type="submit").form__submit.form-button Отправить
                            button#formReset(type="reset").form__reset.form-button Очистить
            button#scrollUpButton.arrow.arrow--up
                svg.arrow__vector.arrow__vector--up
                    use(xlink:href="#arrow_down")
            include ../../components/response_alert/response_alert.pug

        .works__footer
            include ../../components/footer/footer.pug

